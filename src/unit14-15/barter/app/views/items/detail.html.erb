<h1><%= @item_detail[0].name %></h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Condition</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @item_detail.each do |item| %>
      <tr>
        <td><%= link_to image_tag(item.item_image.url(:thumb)), item_detail_path(:item_id => item.id)  %></td>
        <td><%= item.name %></td>
        <td><%= sanitize(item.description) %></td>
        <td><%= item.status %></td>
        <td><%= item.condition %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= form_tag(bids_path, method: "post") do  %>
<input type='hidden' name='listing_item_id' value="<%=@listing_item_id%>">
<%= select_tag(:bid_item_id, options_for_select(@selection_items)) %>
<%= submit_tag("Bid") %>
<% end %>

<h2>Bids</h2>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Condition</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @bid_items.each do |item| %>
      <tr>
        <td><%= image_tag(item.item_image.url(:thumb))  %></td>
        <td><%= item.name %></td>
        <td><%= sanitize(item.description) %></td>
        <td><%= item.status %></td>
        <td><%= item.condition %></td>
      </tr>
  <% end %>
  </tbody>
</table>
