<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Condition</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.image_url %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.status %></td>
        <td><%= item.condition %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

