<!DOCTYPE html>
<html>
<head>
  <title>Barter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
    <div id="banner">
    <!--<%= image_tag("logo.png") %> -->
    <%= @page_title || "Barter" %><!-- <label id="code.depot.e.title"/> -->
  </div>
  <div id="columns">
    <div id="side">
      <ul>
        <li><%= link_to "My Account", account_path %></li>
        <li><%= link_to "Items Listing", items_path %></li>
        <li><%= link_to "Site Transaction History", completed_transactions_path %></li>
      </ul>
      <% if current_user %>
          Logged in as <%= current_user.email %>.
          <%= link_to "Log out", logout_path %>
      <% else %>
          <%= link_to "Sign up", signup_path %> or
          <%= link_to "log in", login_path %>.
      <% end %>
    </div>
    <div id="main">
  <%= yield %>
    </div>
  </div>
</body>
